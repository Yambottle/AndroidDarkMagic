<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_320sdp"
    android:layout_height="wrap_content"
    android:background="@color/toolbar_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30_70sdp"
        android:layout_marginTop="@dimen/_19sdp"
        android:fontFamily="@font/robotomedium"
        android:text="Filter By User"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_checkbox_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_224sdp"
        android:background="@null"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_49sdp"
        android:background="@color/m_turquoise"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/checkdialog_ok_btn"
            android:layout_width="@dimen/_83sdp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_8_90sdp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:text="OK"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/robotomedium"/>
        <Button
            android:id="@+id/checkdialog_cancel_btn"
            android:layout_width="@dimen/_83sdp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/checkdialog_ok_btn"
            android:background="@null"
            android:text="CLEAR"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/robotomedium"/>
    </RelativeLayout>
</LinearLayout>